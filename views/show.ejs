<% include ./partials/header.ejs %>
    <div class="w-full min-h-screen bg-zinc-800 px-10 py-8 text-white">
        <div class="cards flex flex-wrap gap-10">
            <% user.posts.forEach(function(elem){ %>
                <div class="card w-32">
                    <div class="w-full h-40 rounded-lg overflow-hidden">
                        <a href="/images/uploads/<%= elem.image %>"><img class="img w-full h-full object-cover hover:scale-125 duration-500 cursor-pointer" src="/images/uploads/<%= elem.image %>" alt=""></a>
                    </div>
                    <h4 class="mt-2 text-sm"><%= elem.title %></h4>
                    <h5 class="mt-1 text-sm"><%= elem.description %></h5>
                    <form method="POST" action="/delete/<%= elem._id %>?_method=DELETE">
                        <button class="mt-1 text-xs px-1.5 py-1 bg-red-500 text-white rounded-lg">Delete post</button>
                    </form>
                </div>
            <% }) %>
        </div>
    </div>
<% include ./partials/footer.ejs %>