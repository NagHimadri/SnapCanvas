<% include ./partials/header.ejs %>
    <div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white text-center">
        <h1 class="text-xl">Create a new post</h1>
        <hr class="opacity-10 mt-3">
        <form class="flex flex-col justify-center items-center" action="/createpost" method="post" enctype="multipart/form-data">
            <input class="block w-2/3 px-3 py-2" type="file" name="postimage">
            <input class="text-black block w-2/3 px-3 py-2 border-2 mt-2 rounded-md" type="text" placeholder="Title" name="title">
            <textarea class="text-black block w-2/3 h-60 px-3 py-2 border-2 mt-2 rounded-md text-sm" type="text" placeholder="Description" name="description"></textarea>
            <input class="block w-2/3 px-3 py-2 mt-2 bg-red-700 rounded-md cursor-pointer" type="submit" value="Create Post">
        </form>
    </div>
<% include ./partials/footer.ejs %>